                <h3 class="title_car">Carrito de compra</h3>
                <form action="/" method="POST">
                    <section class="container_description_buy">
                        <article class="description_buy">
                            <table class="table_car">
                                <thead>
                                    <tr>
                                        <th class="product_image">&nbsp;</th>
                                        <th class="product_name">Producto</th>
                                        <th class="product_price">Precio</th>
                                        <th class="product_quantity">Cantidad</th>
