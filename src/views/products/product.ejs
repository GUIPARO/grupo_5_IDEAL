<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %>
<body>
    <%- include("../partials/header") %>
    <main>
        <section class="container_details_product">
            <figure class="container_product">
                <img class="product_image" src="/img/products_image/<%=product.image%>" alt="camiseta_fashion">
            </figure>
            <section class="container_info_product">
                <h3 class="product_name"><%=product.fullname%></h3>
                <div class="detail_product">
                    <div class="contanier_cost">
                        <div class="product_cost"><%=`$ ${product.price}`%></div>
                    </div>
                    </div>
                    <div class="container_technic">
                        <span class="title_technic">Técnica</span>
                        <ul>
                            <% if (typeof(product.technique_id_techniques) == "object") { %> 
                                <% for(let i = 0; i < product.dataValues.technique_id_techniques.length; i++) { %> 
                                <li class="type_technic"><%= product.technique_id_techniques[i].dataValues.technique%></li>
                                <% } %> 
                            <% } else { %> 
                                <li class="type_technic"><%= product.dataValues.technique_id_techniques %></li>
                            <% } %> 
                        </ul>
                    </div>
                    <div class="container_line">
                        <span class="title_line"><%= product.line.dataValues.line%></span>
                        <div class="list">
                            <ul>
                                <% if (typeof(product.subactivity_id_subactivities) == "object") { %> 
                                    <% for(let i = 0; i < product.dataValues.subactivity_id_subactivities.length; i++) { %> 
                                        <li> <%= product.subactivity_id_subactivities[i].dataValues.subactivity %></li>
                                    <% } %>
                                <% } else { %> 
                                    <li><%= product.dataValues.subactivity_id_subactivities%></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                    <div class="detail_activity">
                        <div class="contanier_activity">
                            <div class="activity"><%=product.activity_id_activities[0].dataValues.activity %></div>
                        </div>  
                    </div>
                    <div class="buying_guide">
                        <i class="fas fa-book-open"></i><a href="#">Guía de compra</a>
                    </div>
                </div>
                <div class="container_form">
                    <form action="/" method="post">
                        <div class="container_material">
                            <div class="list_material">
                                <span class="title_material">Tela</span>
                                <ul class="topic_material">
                                    <li class="select_material">
                                        <span class="material">
                                            <% if (typeof(product.dataValues.material_id_materials) == "object") { %> 
                                                <% for(let i = 0; i < product.dataValues.material_id_materials.length; i++) { %> 
                                                    <input type="radio" name="material" id="tela_01" value="<%=product.material_id_materials[i].dataValues.material%>">
                                                    <label for="tela_01" name="tela"><%=product.material_id_materials[i].dataValues.material%></label>
                                                <% } %> 
                                            <% } else { %> 
                                                <input type="radio" name="material" id="tela_01" value="<%=product.dataValues.material_id_materials%>">
                                                <label for="tela_01" name="tela"><%=product.dataValues.material_id_materials%></label>
                                            <% } %> 
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="container_sizes">
                            <div class="list_sizes">
                                <span class="title_size">Talla</span>
                                <div class="size_guide">
                                    <i class="fas fa-tshirt"></i><a href="#">Guía de tallas</a>
                                </div>
                                <ul class="topic_size">
                                    <li class="select-size">
                                        <span class="sizes">
                                            <input type="radio" name="talla" id="talla_01" value="XS">
                                            <label for="talla_01" name="talla">XS</label>
                                            <input type="radio" name="talla" id="talla_02" value="S">
                                            <label for="talla_02" name="talla">S</label>
                                            <input type="radio" name="talla" id="talla_03" value="M">
                                            <label for="talla_03" name="talla">M</label>
                                            <input type="radio" name="talla" id="talla_04" value="L">
                                            <label for="talla_04" name="talla">L</label>
                                            <input type="radio" name="talla" id="talla_05" value="XL">
                                            <label for="talla_05" name="talla">XL</label>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="container_color">
                            <span class="title_color">Color</span>
                            <div class="topic_color">
                                <select class="select_color" name="color" id="select-color" type="select">
                                    <option selected="" value="Blanco">Blanco</option>
                                    <option value="Negro">Negro</option>
                                    <option value="Morado">Morado</option>
                                    <option value="Naranja">Naranja</option>
                                    <option value="Rojo">Rojo</option>
                                </select>
                            </div>
                        </div>
                        <div class="container_fileUpload">
                            <label for="title_fileUpload">Subir archivo/diseño</label>
                            <input type="file" id="fileUpload">
                        </div>
                        <div class="container_comments">
                            <div class="comments">
                                <label for="write_comments">Observaciones Adicionales</label>
                                <textarea id="write_comments"
                                    name="area_comments" placeholder="¡Escribe aca! Observaciones o detalles adicionales a tener en cuenta"></textarea>
                            </div>
                        </div>
                        <div class="container_quantity">
                            <div class="quantity">
                                <select class="list_quantity" name="cantidad" id="select_quantity">
                                    <option selected="" value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                </select>
                            </div>
                            <button class="btn " type="submit">Agregar al carrito</button>
                        </div>
                    </form>
                </div>
            </section>
        </section>
    </main>
    <script src="/js/eventNavBar.js"></script>
    <%- include("../partials/footer") %>
</body>
</html>